<div id="film-container" class="w-900 mt-10">
    <form class="text-grey-light flex items-center justify-between text-sm">
        <span class="py-10 text-silver">FILMS</span>
        <span class="py-10 text-black">
            <span class="dropdown pl-10">
                <select name="decade" id="decade" class="cursor-pointer">
                    <option value="">Decade</option>
                    <option value="">Any</option>
                    <option value="2020s">2020s</option>
                    <option value="2010s">2010s</option>
                    <option value="2000s">2000s</option>
                    <option value="1990s">1990s</option>
                    <option value="1980s">1980s</option>
                    <option value="1970s">1970s</option>
                    <option value="1960s">1960s</option>
                    <option value="1950s">1950s</option>
                    <option value="1940s">1940s</option>
                    <option value="1930s">1930s</option>
                    <option value="1920s">1920s</option>
                    <option value="1910s">1910s</option>
                </select>
            </span>
            <span class="dropdown pl-10">
                <select name="genre" id="genre">
                    <option value="">Genre</option>
                    <option value="">Any</option>
                    <option value="action">Action</option>
                    <option value="adventure">Adventure</option>
                    <option value="animation">Animation</option>
                    <option value="comedy">Comedy</option>
                    <option value="crime">Crime</option>
                    <option value="documentary">Documentary</option>
                    <option value="drama">Drama</option>
                    <option value="family">Family</option>
                    <option value="fantasy">Fantasy</option>
                    <option value="history">History</option>
                    <option value="horror">Horror</option>
                    <option value="music">Music</option>
                    <option value="mystery">Mystery</option>
                    <option value="romance">Romance</option>
                    <option value="science-fiction">Science Fiction</option>
                    <option value="thriller">Thriller</option>
                    <option value="tv-movie">TV Movie</option>
                    <option value="war">War</option>
                    <option value="western">Western</option>
                </select>
            </span>
            <span class="dropdown pl-10">
                <select name="service" id="service">
                    <option value="">Service</option>
                    <option value="">Any</option>
                    <option value="netflix">Netflix</option>
                    <option value="prime-video">Prime Video</option>
                    <option value="hulu">Hulu</option>
                    <option value="disney-plus">Disney Plus</option>
                    <option value="max">Max</option>
                </select>
            </span>
            <span class="dropdown pl-10">
                <span class="text-silver">Sort By</span>
                <select name="popular" id="popular">
                    <option value="">Film Popularity</option>
                </select>
            </span>
        </span>
    </form>

    <hr>

    <div id="films" results="{{results}}" class="flex justify-center flex-wrap gap-10 py-10 w-900">
        {{#each films}}
        <div class="film w-80">
            <a href="/film/{{this.id}}">
                <img src="{{this.poster}}" draggable="false" title="{{this.title}} ({{this.year}}) {{this.average}}">
            </a>
        </div>
        {{/each}}
    </div>

    <hr>

    <div id="page" class="py-10 flex items-center justify-between">
        <button id="prev" onclick="updatePage(-1)" class="cursor-pointer bg-grey-dark text-silver p-10 rounded-lg">Previous</button>
        <button id="next" onclick="updatePage(1)" class="cursor-pointer bg-grey-dark text-silver p-10 rounded-lg">Next</button>
    </div>

    <script src="/scripts/films.js"></script>
</div>